{% extends '/layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <h1 class="col">{{ user.userName }}</h1>
            <div class="col text-right">
                <a href="{{ path('app_edituserprofile') }}" class="btn btn-sm btn-custom"
                   title="{% trans %} Edit profile {% endtrans %}">{% trans %} Edit profile {% endtrans %} <i
                            class="fas fa-user-edit"></i></a>
            </div>
        </div>
        <div class="row">
            <hr class="col"/>
        </div>
        <div class="row">
            <div class="col image-placeholder">
                {% if user.getUserProfile.getImage.nameImage is defined %}
                    {% set imageUrl = user.getUserProfile.getImage.getImageLocationByType('blogging') %}
                    <img src="{{ imageUrl }}" class="img-fluid" alt="test" />
                {% endif %}
            </div>
            <div class="col">
                <table class="table table-sm table-responsive-md table-borderless">
                    <tr>
                        <th>{% trans %}Firstname{% endtrans %}:</th>
                        <td>{{ user.userProfile.firstName }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Lastname{% endtrans %}:</th>
                        <td>{{ user.userProfile.lastName }}, {{ user.userProfile.lastNamePrefix }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}email{% endtrans %}:</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Birthdate{% endtrans %}:</th>
                        <td>{{ user.userProfile.birthday|date("Y-m-d") }} ({{ user.userProfile.birthday|age() }}) {% trans %}year{% endtrans %}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
