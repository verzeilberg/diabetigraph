{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col">{% trans %}Sign in{% endtrans %}</h1>
    </div>
    <div class="row">
        <div class="col">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group row">
                    <label class="col-md-1" for="inputUsername">{% trans %}Username{% endtrans %}</label>
                    <div class="col-md-2">
                        <input type="text"
                               value="{{ last_username }}"
                               name="userName" id="inputUsername"
                               class="form-control"
                               placeholder="{% trans %}Username{% endtrans %}"
                               required
                               autofocus
                        >
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-1" for="inputPassword">{% trans %}Password{% endtrans %}</label>
                    <div class="col-md-2">
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               placeholder="{% trans %}Password{% endtrans %}" required>
                    </div>
                </div>
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
                #}
                <div class="form-check row mb-3">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-2">
                        <input type="checkbox" name="_remember_me" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">{% trans %}Remember me{% endtrans %}</label>
                    </div>
                </div>

                {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                #}
                <div class="form-group row mb-3">
                    <div class="col-md-2">
                        <input type="hidden" name="_target_path" value="/admin"/>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="btn btn-custom">{% trans %}Sign in{% endtrans %}</button>
                    </div>
                </div>
            </form>


        </div>
    </div>
    <div clas="row">
        <div class="col">
            <p>
                <a href="{{ path('app_registeruser') }}" class="nav-link text-black-50"
                   title="{% trans %}If you don't have a acoount, register here{% endtrans %}!">
                    {% trans %}If you don't have a acoount, register here{% endtrans %}!
                </a>
            </p>
        </div>
    </div>
{% endblock %}
